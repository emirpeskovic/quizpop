@section Scripts
{
    <script>
        $(function () {
            $("button").click(function () {
                
                const formData = {
                    email: $("#email").val(),
                    password: $("#password").val()
                };
                
                $.ajax({
                    url: "@Url.Action("Login", "Auth")",
                    type: "POST",
                    data: JSON.stringify(formData),
                    success: function (data) {
                        if (data.success) {
                            window.location.href = "@Url.Action("Index", "Home")";
                        } else {
                            console.log(data);
                            alert(data.message);
                        }
                    },
                    error: function (data) {
                        console.log(data);
                        alert(data.message);
                    }
                });
            });
        });
    </script>
}

<div class="flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-lg px-8 py-6">
            <h2 class="text-2xl font-medium text-gray-800 mb-6">Login</h2>
            <form>
                <div class="mb-4">
                    <label class="block text-gray-700 font-bold mb-2" for="email">
                        Email
                    </label>
                    <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Email">
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 font-bold mb-2" for="password">
                        Password
                    </label>
                    <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="Password">
                </div>
                <div class="mb-6">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
                        Sign In
                    </button>
                </div>
                <p class="text-gray-600 text-sm">Don't have an account? <a href=@Url.Action("Register", "Account") class="text-blue-500 hover:text-blue-700 no-underline">Register</a></p>
            </form>
        </div>
    </div>
</div>